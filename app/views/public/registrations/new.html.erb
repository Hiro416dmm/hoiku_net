<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="my-5 text title-text">新規会員登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group row">
            <%= f.label "名前", class: "col-sm-3 col-form-label col-form-label-sm" %>
            <%= f.text_field :name, autofocus: true, placeholder: "姓名" %>
          </div>
          <div class="form-group row">
            <%= f.label "フリガナ", class: "col-sm-3 col-form-label col-form-label-sm" %>
            <%= f.text_field :name_kana, autofocus: true, placeholder: "セイメイ" %>
          </div>
          <div class="form-group row">
            <%= f.label "Eメール", class: "col-sm-3 col-form-label col-form-label-sm" %>
            <%= f.email_field :email, autofocus: true, placeholder: "◯◯◯＠◯◯" %>
          </div>

          <div class="form-group row">
            <%= f.label :password, "パスワード（6文字以上）" , class: "col-sm-3 col-form-label col-form-label-sm"%>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="form-group row">
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-sm-3 col-form-label col-form-label-sm" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="form-group row">
            <%= f.submit "新規登録", class: "btn btn-outline-success" %>
          </div>
        <% end %>

        <h5 class="mb-4 text">既に登録済みの方</h5>
      <p class="ml-5 mb-4 text">
        <u>
          <%= link_to " こちら", new_user_session_path, class: "text-dark" %>
        </u>
        からログインしてください。
      </p>
    </div>
  </div>
</div>

