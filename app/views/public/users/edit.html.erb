<div class="container py-5">
  <div class="row">
    <h5 class="col-4 text-center">会員情報編集</h5>
  </div>
  <div class="col-12 mt-4">
    <%= form_with model: @user,url: users_information_path, local: true do |f| %>
      <div class="field row">
        <p class="col-3">名前</p>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field row">
        <p class="col-3">フリガナ</p>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>

      <div class="field row">
        <p class="col-3">メールアドレス</p>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="actions row">
        <%= f.submit "編集内容を保存", class: "btn btn-sm btn-outline-success mr-md-5" %>
        <%= link_to '退会する', users_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-outline-secondary ml-4"%>
      </div>
    <% end %>
  </div>
</div>