<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h1 class="mb-3"><%= @user.name %>さんの会員詳細</h1>
      <table class='table text-secondary'>
        <tbody>
        <tr>
        	<th>会員ID</th>
          <th><%= @user_id %></th>
        </tr>
        <tr>
      	  <th>氏名</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>メールアドレス</th>
      	  <th><%= @user.email %></th>
        </tr>
        <tr>
        	<th>会員ステータス</th>
            <th><% if @customer.is_deleted == false %>
                <b class="text-success font-weight-bold">有効</b>
              <% else %>
                <b class="text-muted font-weight-bold">退会</b>
              <% end %>
            </th>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_user_path, class:"btn btn-success ml-4" %>
    </div>
  </div>
</div>